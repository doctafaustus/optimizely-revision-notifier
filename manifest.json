{
  "manifest_version": 2,

  "name": "Optimizely Revision Notifier",
  "description": "This extension will notify you of content pushed to Optimizely CDN.",
  "version": "2.0.0.7",

  "icons": {},

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Notify"
  },

  "permissions": [
    "activeTab",
    "notifications",
    "background"
  ],

  "background": {
    "scripts": ["background.js"]
  },

 "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": ["jquery-1.11.2.min.js", "content.js"]
    }
  ]

}